<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/home_ll_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_chart_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/chart_area_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年份" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_chart_area"
                android:layout_width="80dp"
                android:layout_height="wrap_content"></android.support.v7.widget.AppCompatSpinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月份：" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_chart_year"
                android:layout_width="80dp"
                android:layout_height="wrap_content">

            </android.support.v7.widget.AppCompatSpinner>

            <TextView
                android:id="@+id/__"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="-" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_chart_year1"
                android:layout_width="80dp"
                android:layout_height="wrap_content">

            </android.support.v7.widget.AppCompatSpinner>

            <TextView
                android:id="@+id/shengcheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:text="生成"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/month_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/month_message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal" />

        <!--图表layout-->
        <LinearLayout
            android:id="@+id/month_chart"
            android:layout_width="fill_parent"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="gone" />

        <!--表格界面-->
        <LinearLayout
            android:id="@+id/rvChart_table_layout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvChart_key"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="分类"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/darkgrey" />

                <TextView
                    android:id="@+id/tvChart_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="序号"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/darkgrey" />

                <TextView
                    android:id="@+id/tvChart_other"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="其他"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal"
                    android:visibility="visible" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/darkgrey" />

                <TextView
                    android:id="@+id/tvChart_percent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="所占比重"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/darkgrey" />

                <TextView
                    android:id="@+id/tvChart_percent1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="开工"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal"
                    android:visibility="visible" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/darkgrey" />

                <TextView
                    android:id="@+id/tvChart_percent2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="续建"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal"
                    android:visibility="gone" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/darkgrey" />

                <TextView
                    android:id="@+id/tvChart_percent3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="投产"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal"
                    android:visibility="gone" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/darkgrey" />

                <TextView
                    android:id="@+id/tvChart_percent4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="终止"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/darkgrey" />

            <LinearLayout
                android:id="@+id/layout6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/darkgrey" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="合计"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/darkgrey" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="10"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/text_size_normal"
                    android:visibility="visible" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/darkgrey" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/darkgrey" />

            <TextView
                android:id="@+id/tv_reback"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="返回上一级"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/white" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvChart_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>
    <!--</ScrollView>-->

</LinearLayout>
