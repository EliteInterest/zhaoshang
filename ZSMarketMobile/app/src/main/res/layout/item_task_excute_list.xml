<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_search_result_list_view"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/home_ll_bg"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="10dp"
              android:paddingTop="5dip">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_zt_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"/>
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@color/lightgrey"/>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="5dip">

        <TextView
            android:id="@+id/tv_zt_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/buttonblue"
            android:textSize="@dimen/text_size_big"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属板块："
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"/>

            <TextView
                android:id="@+id/tv_zt_address"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属行业："
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"/>

            <TextView
                android:id="@+id/tv_zt_tel"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"/>

        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/ibtn_zt_changepos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:background="@color/white"
        android:contentDescription="@string/changepos"
        android:src="@mipmap/change_pos"
        android:visibility="gone"/>

</LinearLayout>
