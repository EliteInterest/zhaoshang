<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvItemTable_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <TextView
            android:id="@+id/tvItemTable_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="数量"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <TextView
            android:id="@+id/tvItemTable_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="所占比重"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal"
            android:visibility="visible" />

        <View
            android:id="@+id/tvItemTable_second_right_line"
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <TextView
            android:id="@+id/tvItemTable_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="开工"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal"
            android:visibility="gone" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <TextView
            android:id="@+id/tvItemTable_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="续建"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal"
            android:visibility="gone" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <TextView
            android:id="@+id/tvItemTable_five"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="投产"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal"
            android:visibility="gone" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <TextView
            android:id="@+id/tvItemTable_six"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="终止"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/darkgrey" />

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/layout_name1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <include
                android:id="@+id/include1"
                layout="@layout/activity_month_include" />

            <include
                android:id="@+id/include2"
                layout="@layout/activity_month_include" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/layout_name11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <include
                android:id="@+id/include1"
                layout="@layout/activity_month_include" />

            <include
                android:id="@+id/include2"
                layout="@layout/activity_month_include" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/darkgrey" />

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/layout_name2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="按地域分"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <include
                android:id="@+id/include3"
                layout="@layout/activity_month_include" />

            <include
                android:id="@+id/include4"
                layout="@layout/activity_month_include" />

            <include
                android:id="@+id/include5"
                layout="@layout/activity_month_include" />

            <include
                android:id="@+id/include6"
                layout="@layout/activity_month_include" />

            <include
                android:id="@+id/include7"
                layout="@layout/activity_month_include" />

            <include
                android:id="@+id/include8"
                layout="@layout/activity_month_include" />

            <include
                android:id="@+id/include9"
                layout="@layout/activity_month_include" />

            <include
                android:id="@+id/include10"
                layout="@layout/activity_month_include" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="合计"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="10"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal"
            android:visibility="visible" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="20"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal"
            android:visibility="visible" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="30"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal"
            android:visibility="visible" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="40"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal"
            android:visibility="visible" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />
    </LinearLayout>
</LinearLayout>