<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tvItemTable_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <TextView
            android:id="@+id/tvItemTable_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="数量"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <TextView
            android:id="@+id/tvItemTable_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="所占比重"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal"
            android:visibility="visible" />

        <View
            android:id="@+id/tvItemTable_second_right_line"
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <TextView
            android:id="@+id/tvItemTable_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="开工"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal"
            android:visibility="gone" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <TextView
            android:id="@+id/tvItemTable_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="续建"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal"
            android:visibility="gone" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <TextView
            android:id="@+id/tvItemTable_five"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="投产"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal"
            android:visibility="gone" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/darkgrey" />

        <TextView
            android:id="@+id/tvItemTable_six"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="终止"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_size_normal"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/darkgrey" />

</LinearLayout>