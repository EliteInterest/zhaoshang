<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/px10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:text="基础地图："
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip">

            <android.support.v7.widget.AppCompatRadioButton
                android:visibility="gone"
                android:id="@+id/radiobtn_publish"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/map_publish_setting"/>

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/radiobtn_offline"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/map_offline_setting"/>

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/radiobtn_customer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/map_customer_setting"/>

            <LinearLayout
                android:id="@+id/ll_settings_map_ip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_settings_map_ip_1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="42"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dip"
                    android:text="."/>

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_settings_map_ip_2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="123"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dip"
                    android:text="."/>

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_settings_map_ip_3"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="116"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dip"
                    android:text="."/>

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_settings_map_ip_4"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="156"/>
            </LinearLayout>
        </RadioGroup>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="专题地图："
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edtActMapSetting_ip0"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="3"
                    android:text="42"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dip"
                    android:text="."/>

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edtActMapSetting_ip1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="3"
                    android:text="123"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dip"
                    android:text="."/>

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edtActMapSetting_ip2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="3"
                    android:text="116"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dip"
                    android:text="."/>

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edtActMapSetting_ip3"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="3"
                    android:text="156"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="（在线地图默认IP：42.123.116.156）"
                android:textColor="@color/red"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_settingMap_versionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前离线矢量地图版本号：1.0.0"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_settingMap_checkUpdate"
                style="@style/MyButtonStyle"
                android:text="检测更新"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_settings_map_ok"
        style="@style/MyButtonStyle"
        android:layout_marginBottom="10dp"
        android:text="@string/ok"/>

</RelativeLayout>