<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">


    <include
        layout="@layout/normal_tab_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/llActHome_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/tvActHome_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/tvActHome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/settings"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="32dp"
                android:paddingTop="10dp"
                android:text="@string/settings"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_big"/>

            <ImageView
                android:id="@+id/ivActHome_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="19dp"
                android:layout_marginTop="8dp"
                android:scaleType="center"
                android:src="@mipmap/update_flag"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tvActHome_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center">

            <TextView
                android:id="@+id/tvActHome_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:drawableLeft="@mipmap/message"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/messagecenter"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_big"/>

            <TextView
                android:id="@+id/tv_bottom_messsage_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvActHome_message"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="11"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_more_micro"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvActHome_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawableLeft="@mipmap/help"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="32dp"
            android:paddingTop="10dp"
            android:text="@string/help"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big"/>
    </LinearLayout>

</LinearLayout>