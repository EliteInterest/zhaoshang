<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/TL_complainSearchTask"
        style="@style/MyTabLayoutStyle"/>


    <LinearLayout
        android:id="@+id/llFmSearchTask_select"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/task_top"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llFmSearchTask_dpt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp"
            android:tag="dpt">

            <TextView
                android:id="@+id/tvFmSearchTask_dpt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableRight="@mipmap/down"
                android:ellipsize="end"
                android:singleLine="true"
                android:tag="address"
                android:text="贵安新区"
                android:textColor="@color/darkgrey"
                android:textSize="10sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/task_doline"/>

        <LinearLayout
            android:id="@+id/llFmSearchTask_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp"
            android:tag="procedure">

            <TextView
                android:id="@+id/tvFmSearchTask_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableRight="@mipmap/down"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="全部状态"
                android:textColor="@color/darkgrey"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/VP_complainSearch"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
</LinearLayout>
